{
    "name": "toeic-brain",
    "version": "1.0.0",
    "type": "module",
    "description": "Electron + TypeScript + React + Redux + Vite + Electron Builder",
    "main": "./dist/main.js",
    "scripts": {
        "clear-console": "node -e \"console.clear();\"",
        "rebuild": "electron-rebuild",
        "postinstall": "electron-rebuild",
        "start": "npm run clear-console && chcp 65001 && node scripts/dev.js",
        "build": "npm run clear-console && node scripts/build.js",
        "pack": "npm run clear-console && npm run build && electron-builder --dir",
        "dist": "npm run clear-console && npm run build && electron-builder"
    },
    "keywords": [
        "electron",
        "typescript",
        "react",
        "redux",
        "vite"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@electron/rebuild": "^3.7.2",
        "@types/node": "^24.10.1",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/react-redux": "^7.1.33",
        "@vitejs/plugin-react": "^4.7.0",
        "chokidar": "^3.6.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3",
        "vite": "^5.4.21"
    },
    "dependencies": {
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@reduxjs/toolkit": "^2.0.1",
        "@xenova/transformers": "^2.17.2",
        "node-llama-cpp": "^3.14.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.0.4",
        "wavefile": "^11.0.0"
    },
    "build": {
        "appId": "com.toeicbrain.app",
        "productName": "TOEIC Brain",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    }
}
